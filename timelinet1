    <script>
        // ——————————————————————————————————————————————————————————
        // 1. DATA (Overlap & Stacking Rules Apply)
        // ——————————————————————————————————————————————————————————
        const projects = [
            {
                id: 0,
                title: "Sentient AI",
                start: "2024-09",
                end: "2025-06", // Ongoing
                status: "Ongoing",
                desc: "A latency-free voice interface for LLMs. Stripped away chat bubbles for a pure, fluid audio stream visualization.",
                tech: ["WebSockets", "React", "OpenAI Realtime", "WebGL"],
                img: "https://images.unsplash.com/photo-1618005182384-a83a8bd57fbe?q=80&w=2500&auto=format&fit=crop"
            },
            {
                id: 1,
                title: "Vesper Protocol",
                start: "2023-11",
                end: "2024-12", // Overlaps with Sentient, Long
                status: "Shipped",
                desc: "DeFi dashboard aggregating yield data across 12 chains. Heavy focus on information density and keyboard navigation.",
                tech: ["Next.js", "Tailwind", "Viem", "Postgres"],
                img: "https://images.unsplash.com/photo-1642104704074-907c0698cbd9?q=80&w=2500&auto=format&fit=crop"
            },
            {
                id: 2,
                title: "Mono Systems",
                start: "2024-01",
                end: "2024-04", // Short, Nested inside Vesper
                status: "Internal",
                desc: "A brutalist design system built for internal data tools. Zero layout shift, 100% accessibility compliance.",
                tech: ["Lit", "CSS Modules", "Storybook"],
                img: "https://images.unsplash.com/photo-1550751827-4bd374c3f58b?q=80&w=2500&auto=format&fit=crop"
            },
            {
                id: 3,
                title: "Oculi Portfolio",
                start: "2023-01",
                end: "2023-10", // Medium
                status: "Shipped",
                desc: "Infinite canvas portfolio for a Berlin photographer. Custom progressive image loader for instant LCP.",
                tech: ["Nuxt 3", "GSAP", "Cloudinary"],
                img: "https://images.unsplash.com/photo-1492691527719-9d1e07e534b4?q=80&w=2500&auto=format&fit=crop"
            },
            {
                id: 4,
                title: "Sonic Playground",
                start: "2022-08",
                end: "2022-12", // Short
                status: "Experiment",
                desc: "Browser-based spatial audio mixer. Drag sound sources in 3D space to manipulate panning and reverb.",
                tech: ["Three.js", "Web Audio API", "Zustand"],
                img: "https://images.unsplash.com/photo-1511379938547-c1f69419868d?q=80&w=2500&auto=format&fit=crop"
            },
            {
                id: 5,
                title: "Hyperion Fleet",
                start: "2021-06",
                end: "2022-11", // Long overlap
                status: "Archived",
                desc: "Drone telemetry interface. High-contrast UI designed for readability under direct sunlight usage.",
                tech: ["Svelte", "Mapbox GL", "MQTT"],
                img: "https://images.unsplash.com/photo-1550745165-9bc0b252726f?q=80&w=2500&auto=format&fit=crop"
            },
            {
                id: 6,
                title: "Type Foundry",
                start: "2021-02",
                end: "2021-08",
                status: "Shipped",
                desc: "E-commerce for custom typography. Built a custom font-renderer on canvas to prevent font piracy.",
                tech: ["Gatsby", "Shopify API", "Canvas"],
                img: "https://images.unsplash.com/photo-1561070791-2526d30994b5?q=80&w=2500&auto=format&fit=crop"
            },
            {
                id: 7,
                title: "CLI v1",
                start: "2021-01",
                end: "2021-03", // Very short
                status: "Legacy",
                desc: "My first portfolio. A command line interface in the browser. Functional but confusing for recruiters.",
                tech: ["Vanilla JS", "HTML", "CSS"],
                img: "https://images.unsplash.com/photo-1555099962-4199c345e5dd?q=80&w=2500&auto=format&fit=crop"
            }
        ];

        // ——————————————————————————————————————————————————————————
        // 2. LOGIC & MATH
        // ——————————————————————————————————————————————————————————
        
        const track = document.getElementById('track');
        const container = document.getElementById('timeline-container');
        
        // Time constants
        const START_DATE = new Date("2021-01-01").getTime();
        const END_DATE = new Date("2025-12-31").getTime();
        const TOTAL_MS = END_DATE - START_DATE;

        let isVertical = window.innerWidth <= 780;
        let TRACK_LENGTH = isVertical ? 2000 : 3000; // Virtual px size
        let OFFSET_PADDING = isVertical ? container.offsetHeight / 2 : container.offsetWidth / 2;

        function getPct(dateStr) {
            const d = new Date(dateStr + "-01").getTime();
            return Math.max(0, Math.min(1, (d - START_DATE) / TOTAL_MS));
        }

        // Render Timeline
        function initTimeline() {
            track.innerHTML = '';
            
            projects.forEach((p, i) => {
                const startPct = getPct(p.start);
                const endPct = getPct(p.end);
                const durationPct = Math.max(endPct - startPct, 0.02); // Min size

                // Calculate Stacking Order (The Sacred Rule)
                // Duration in ms
                const dStart = new Date(p.start + "-01").getTime();
                const dEnd = new Date(p.end + "-01").getTime();
                const durationMs = dEnd - dStart;
                
                // Z-Index: Inverse to duration. 
                // Max duration approx 4 years. 
                // Smaller duration = Higher Z.
                const zIndex = 100 - Math.floor(durationMs / (1000 * 60 * 60 * 24 * 30)); 

                const bar = document.createElement('div');
                bar.className = 'bar-wrapper';
                bar.dataset.id = i;
                
                // Style attributes for duration visualization
                bar.dataset.duration = durationPct < 0.1 ? 'short' : 'long';
                
                // Position logic
                if (isVertical) {
                    bar.style.top = `${startPct * 100}%`;
                    bar.style.height = `${durationPct * 100}%`;
                    bar.style.zIndex = zIndex;
                    // Jitter X slightly to show overlap
                    const jitter = (i % 3) * 10 - 10; // -10, 0, 10
                    bar.style.transform = `translateX(calc(-50% + ${jitter}px))`;
                } else {
                    bar.style.left = `${startPct * 100}%`;
                    bar.style.width = `${durationPct * 100}%`;
                    bar.style.zIndex = zIndex;
                    // Jitter Y slightly
                    const jitter = (i % 3) * 15 - 15; // -15, 0, 15
                    bar.style.top = `calc(50% + ${jitter}px)`;
                }

                // Inner content
                bar.innerHTML = `
                    <div class="bar-inner"></div>
                    <span class="bar-label">${p.title}</span>
                `;

                // Calculate center point in Pixels relative to track start
                p.centerPx = (startPct * TRACK_LENGTH) + ((durationPct * TRACK_LENGTH) / 2);

                track.appendChild(bar);
            });

            // Set track dimensions
            if(isVertical) {
                track.style.height = `${TRACK_LENGTH}px`;
                track.style.width = '100%';
            } else {
                track.style.width = `${TRACK_LENGTH}px`;
                track.style.height = '100%';
            }
        }

        // ——————————————————————————————————————————————————————————
        // 3. PHYSICS ENGINE (Inertia + Spring Snap)
        // ——————————————————————————————————————————————————————————

        let currentPos = 0;
        let velocity = 0;
        let isDragging = false;
        let lastPos = 0;
        let activeIndex = -1;
        
        function updatePhysics() {
            // Apply Friction
            if (!isDragging) {
                velocity *= 0.92;
                currentPos += velocity;

                // Spring Snap to Active Project Center when slow
                if (Math.abs(velocity) < 0.5 && activeIndex !== -1) {
                    const target = -projects[activeIndex].centerPx + OFFSET_PADDING;
                    const delta = target - currentPos;
                    
                    // Spring force
                    currentPos += delta * 0.08; 
                }
            }
            
            // Bounds (Soft limits)
            const min = -TRACK_LENGTH + OFFSET_PADDING;
            const max = OFFSET_PADDING;
            
            if (currentPos > max + 50) currentPos = max + 50; // Rubber band effect logic omitted for simplicity, hard clamp + buffer
            if (currentPos < min - 50) currentPos = min - 50;

            // Render
            if (isVertical) {
                track.style.transform = `translate3d(0, ${currentPos}px, 0)`;
            } else {
                track.style.transform = `translate3d(${currentPos}px, 0, 0)`;
            }

            // Live Selection
            detectActiveProject();

            requestAnimationFrame(updatePhysics);
        }

        function detectActiveProject() {
            // Find closet project to the OFFSET_PADDING (Viewport Center)
            let minDist = Infinity;
            let closest = -1;
            
            projects.forEach((p, i) => {
                const worldPos = p.centerPx + currentPos;
                const dist = Math.abs(worldPos - OFFSET_PADDING);
                if (dist < minDist) {
                    minDist = dist;
                    closest = i;
                }
            });

            if (closest !== -1 && closest !== activeIndex) {
                updateUI(closest);
            }
        }

        // ——————————————————————————————————————————————————————————
        // 4. UI TRANSITIONS
        // ——————————————————————————————————————————————————————————
        
        const dom = {
            title: document.getElementById('p-title'),
            desc: document.getElementById('p-desc'),
            tech: document.getElementById('p-tech'),
            meta: document.getElementById('meta-line'),
            year: document.getElementById('p-year'),
            status: document.getElementById('p-status'),
            imgC1: document.getElementById('img-c-1'),
            imgC2: document.getElementById('img-c-2'),
            img1: document.getElementById('img-1'),
            img2: document.getElementById('img-2')
        };
        
        let usingBuffer1 = true;

        function updateUI(index) {
            activeIndex = index;
            const p = projects[index];

            // 1. Highlight Bar
            document.querySelectorAll('.bar-wrapper').forEach(b => b.classList.remove('active'));
            const activeBar = document.querySelector(`.bar-wrapper[data-id="${index}"]`);
            if(activeBar) activeBar.classList.add('active');

            // 2. Animate Text Out
            const elements = [dom.title, dom.desc, dom.tech, dom.meta];
            elements.forEach(el => {
                el.classList.remove('anim-reset');
                el.classList.add('anim-out');
            });

            // 3. Swap Content & Animate In (Delay for "magic" feel)
            setTimeout(() => {
                // Update Text
                dom.title.textContent = p.title;
                dom.desc.textContent = p.desc;
                dom.year.textContent = p.start.split('-')[0];
                dom.status.textContent = p.status;
                
                // Tech Tags
                dom.tech.innerHTML = p.tech.map(t => `<span class="tech-tag">${t}</span>`).join('');

                // Trigger Anim In
                elements.forEach(el => {
                    el.classList.remove('anim-out');
                    el.classList.add('anim-in');
                    
                    // Force reflow
                    void el.offsetWidth;
                    
                    el.classList.remove('anim-in');
                    el.classList.add('anim-reset');
                });

            }, 300);

            // 4. Image Crossfade (Double Buffer)
            const targetContainer = usingBuffer1 ? dom.imgC2 : dom.imgC1;
            const targetImg = usingBuffer1 ? dom.img2 : dom.img1;
            const prevContainer = usingBuffer1 ? dom.imgC1 : dom.imgC2;

            targetImg.src = p.img;
            
            // Wait for load if possible, else just fade
            targetContainer.style.zIndex = 2;
            prevContainer.style.zIndex = 1;
            
            targetContainer.style.opacity = 1;
            targetContainer.style.transform = 'scale(1)';
            
            prevContainer.style.opacity = 0;
            prevContainer.style.transform = 'scale(1.1)'; // Subtle zoom out on exit

            usingBuffer1 = !usingBuffer1;
        }

        // ——————————————————————————————————————————————————————————
        // 5. INPUT HANDLING
        // ——————————————————————————————————————————————————————————

        function onPointerDown(e) {
            isDragging = true;
            lastPos = isVertical ? e.clientY : e.clientX;
            velocity = 0;
            container.setPointerCapture(e.pointerId);
            container.style.cursor = 'grabbing';
        }

        function onPointerMove(e) {
            if (!isDragging) return;
            const client = isVertical ? e.clientY : e.clientX;
            const delta = client - lastPos;
            currentPos += delta;
            velocity = delta; 
            lastPos = client;
        }

        function onPointerUp(e) {
            isDragging = false;
            container.style.cursor = 'grab';
        }

        container.addEventListener('pointerdown', onPointerDown);
        container.addEventListener('pointermove', onPointerMove);
        container.addEventListener('pointerup', onPointerUp);
        container.addEventListener('pointercancel', onPointerUp);
        
        window.addEventListener('wheel', (e) => {
            if (isDragging) return;
            let delta = isVertical ? e.deltaY : e.deltaX;
            // Handle shift-scroll for horizontal on desktop
            if (!isVertical && e.deltaY && !e.deltaX) delta = e.deltaY;
            
            velocity -= delta * 0.5;
        }, { passive: true });

        // Resize
        window.addEventListener('resize', () => {
            const newVertical = window.innerWidth <= 780;
            if (newVertical !== isVertical) {
                isVertical = newVertical;
                TRACK_LENGTH = isVertical ? 2000 : 3000;
                OFFSET_PADDING = isVertical ? container.offsetHeight / 2 : container.offsetWidth / 2;
                initTimeline();
            }
        });

        // ——————————————————————————————————————————————————————————
        // INIT
        // ——————————————————————————————————————————————————————————
        initTimeline();
        
        // Initial Scroll to latest/first
        setTimeout(() => {
            const startIdx = 0;
            updateUI(startIdx);
            currentPos = -projects[startIdx].centerPx + OFFSET_PADDING;
            updatePhysics();
        }, 50);

    </script>
</body>
</html>198
